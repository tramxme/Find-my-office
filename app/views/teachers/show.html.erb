<h1>Teacher</h1>
  <table class="table table-striped" >
  <tr>
    <th>Name :</th>
    <td><%= @teacher.last_name %>, <%= @teacher.first_name %></td>
  </tr>
  <tr>
    <th>Institute :</th>
    <td><%= @teacher.institute.name %></td>
  </tr>
  <tr>
    <th>Department :</th>
    <td><%= @teacher.department %></td>
  </tr>
  <tr>
    <th>Office address :</th>
    <td><%= @teacher.office_address %></td>
  </tr>
  <tr>
    <th>Email address :</th>
    <td><a href="mailto:<%= @teacher.email_address %>"><%= @teacher.email_address %></a></td>
  </tr>
  <tr>
    <th>Phone number :</th>
    <td><a href="tel:<%= @teacher.phone_number %>"><%= @teacher.phone_number %></a></td>
  </tr>
</table>
<%= button_to "Remove this teacher", teacher_path(@teacher), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-danger" %>
<%= link_to "Edit Profile", edit_teacher_path(@teacher), method: :get %></br>
<%= link_to "Back to list", root_path %>
